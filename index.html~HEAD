<div id="page-wrap">
  <script>
var width = 1200,
    height = 550;

var svg = d3.select( "body" )
  .append( "svg" )
  .attr( "width", width )
  .attr( "height", height );

var g = svg.append( "g" );

var albersProjection = d3.geo.albersUsa()
  .scale( 1000 )
  .translate( [width/1.51, height/2.1] );

var geoPath = d3.geo.path()
    .projection( albersProjection )
    .pointRadius(function(d) { return d.properties.cost; });

var listCitiesClicked = [];

g.selectAll( "path" )
  .data( neighborhoods_json.features )
  .enter()
  .append( "path" )
  .attr( "fill", "#FFF" )
  .attr( "stroke", "#5C5C5C" )
  .attr('stroke-width', 0.25)
  .attr( "d", geoPath );

  var US = svg.append( "g" );

US.selectAll( "path" )
  .data( us_json.features )
  .enter()
  .append( "path" )
  .attr( "fill", "#FFF" )
  .attr( "fill-opacity", "0.2" )
  .attr( "stroke", "#000" )
  .attr( "stroke-opacity", "0.4" )
  .attr( "d", geoPath )
  .on( "click", function (geography){
    var name = $(geography)[0].properties.Name;

    var index = listCitiesClicked.indexOf(" " + name);
        
    if (index === -1) {

      listCitiesClicked.push(" " + name);

      var element = document.getElementById('states');
      element.innerHTML = listCitiesClicked;
      var audio = document.getElementById(name);
                                  
      audio.play();

      var duration = audio.duration/1.48;

      pulse(d3.select(this), duration, name);
    }
    })
  .on( "mouseover", function (geography) {
    var name = $(geography)[0].properties.Name;
    console.log(name);
    var element = document.getElementById('states');
    element.innerHTML = name;

    d3.select(this)
    .attr( "fill", "#F00" )
    .attr( "fill-opacity", "0.6" )
  })
  .on( "mouseleave", function () {
    var element = document.getElementById('states');

    if (listCitiesClicked.length === 0) {
       element.innerHTML = 'click on a city';
     } else {
       element.innerHTML = listCitiesClicked;
     }

    d3.select(this)
    .attr( "fill", "#FFF" )
    .attr( "fill-opacity", "0.2" )
  });

  function pulse(circle_this, time, name) {
      var circle = circle_this;
      var duration = time;

      (function repeat() {
        if (duration < 0) {
          var element = document.getElementById('states');

          var index = listCitiesClicked.indexOf(" " + name);
          if (index > -1) {
            listCitiesClicked.splice(index, 1);
          }

           if (listCitiesClicked.length === 0) {
            element.innerHTML = 'click on a city';
           } else {
            element.innerHTML = listCitiesClicked;
           }

          circle = circle.transition()
          .attr( "stroke", "#999" )
          .attr( "stroke-opacity", "1" )
          .attr('stroke-width', 1)
          .attr( "fill", "#FFF" )
          .attr( "fill-opacity", ".2" )
          .duration(500);
        } else {
          circle = circle.transition()
          .duration(500)
          .attr("stroke-width", 8)
          .attr( "stroke", "#F00" )
          .attr( "fill-opacity", "0.2" )
          .transition()
          .duration(1000)
          .attr('stroke-width', 1)
          .attr( "stroke", "#E996A7" )
          .ease('sine')
           .each("end", function () {
            repeat(duration--); 
          });
        }
      })();
    }
  </script>
  </div>
